<Window x:Class="CardRPG.UI.ArenaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Arena" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Black">

    <Grid>
        <Image Source="Assets/bg_city.avif" Stretch="Fill"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Rectangle Fill="#DD0A0A15"/>

        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="THE ARENA" FontSize="32" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,4">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#FF4444" Offset="0"/>
                        <GradientStop Color="#FF8800" Offset="0.5"/>
                        <GradientStop Color="#FF4444" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
                <TextBlock.Effect>
                    <DropShadowEffect Color="#FF4444" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>

            <TextBlock Grid.Row="1" Text="Fight endless waves of enemies for gold and glory!"
                       FontSize="13" Foreground="#BBAA88"
                       HorizontalAlignment="Center" Margin="0,0,0,16"/>

            <Border Grid.Row="2" Style="{StaticResource RpgPanel}"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Padding="30,20" MinWidth="400">
                <StackPanel HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,6">
                        <TextBlock Text="HP: " Foreground="#8B8B7A" FontSize="16"/>
                        <TextBlock x:Name="HpTxt" Foreground="LightGreen" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,6">
                        <TextBlock Text="Gold: " Foreground="#8B8B7A" FontSize="16"/>
                        <TextBlock x:Name="GoldTxt" Foreground="#FFD700" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,6">
                        <TextBlock Text="Best Wave: " Foreground="#8B8B7A" FontSize="14"/>
                        <TextBlock x:Name="BestWaveTxt" Foreground="OrangeRed" FontSize="14" FontWeight="Bold"/>
                    </StackPanel>

                    <Border Height="1" Background="#33FFD700" Margin="0,12"/>

                    <TextBlock Text="Each wave gets harder. You heal 15% HP between waves."
                               Foreground="#777" FontSize="12" TextWrapping="Wrap"
                               TextAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Rewards: 10-30 Gold per wave + bonus XP."
                               Foreground="#777" FontSize="12" TextWrapping="Wrap"
                               TextAlignment="Center" Margin="0,0,0,16"/>

                    <Button Content="ENTER THE ARENA" Width="260" Height="52"
                            Style="{StaticResource RpgRedButton}"
                            FontSize="16"
                            Click="StartArena_Click"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="3" Style="{StaticResource RpgPanel}"
                    Padding="10,6" Margin="0,16,0,0">
                <DockPanel>
                    <TextBlock x:Name="StatusTxt" Foreground="LimeGreen" FontSize="14"
                               VerticalAlignment="Center"/>
                    <Button DockPanel.Dock="Right" Content="Leave" Width="100" Height="36"
                            Style="{StaticResource RpgSubtleButton}"
                            Click="LeaveButton_Click"/>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
