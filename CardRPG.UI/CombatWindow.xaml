<Window x:Class="CardRPG.UI.CombatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="âš”ï¸ Battle!" Height="680" Width="980"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Black">

    <Grid>
        <!-- Background image -->
        <Image Source="Assets/bg_combat.png" Stretch="Fill"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <!-- Dark overlay for readability -->
        <Rectangle Fill="#BB0A0A15"/>

        <Grid Margin="18,12,18,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="130"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Row 0: Top bar - stage info (left) + enemy info (right) -->
            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock x:Name="StageTxt" Text="Stage 1 / 3"
                               Foreground="Gold" FontSize="15" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock x:Name="EnemyNameTxt" Text="Enemy"
                               Foreground="OrangeRed" FontSize="20" FontWeight="Bold"
                               HorizontalAlignment="Right"/>
                    <TextBlock x:Name="EnemyIntentTxt" Text="Intent: ?"
                               Foreground="#FFCCCC" FontSize="12" HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>

            <!-- Row 1: Battle arena - player (left) vs enemy (right) -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Player side -->
                <StackPanel Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                            Margin="0,0,0,8">
                    <Image Source="Assets/Player.png"
                           Height="180" HorizontalAlignment="Center"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="YOU" Foreground="LightGreen" FontSize="13"
                               FontWeight="Bold" HorizontalAlignment="Center" Margin="0,4,0,2"/>
                    <ProgressBar x:Name="PlayerHpBar" Height="14" Width="200"
                                 Foreground="LimeGreen" Background="#33FFFFFF"
                                 BorderBrush="#555"/>
                    <TextBlock x:Name="PlayerHpTxt" Foreground="White" FontSize="11"
                               HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- VS label -->
                <TextBlock Grid.Column="1" Text="VS"
                           Foreground="#666" FontSize="22" FontWeight="Bold"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <!-- Enemy side -->
                <StackPanel Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                            Margin="0,0,0,8">
                    <Image x:Name="EnemySprite" Height="180" HorizontalAlignment="Center"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock x:Name="EnemyNameSmallTxt" Foreground="OrangeRed" FontSize="13"
                               FontWeight="Bold" HorizontalAlignment="Center" Margin="0,4,0,2"/>
                    <ProgressBar x:Name="EnemyHpBar" Height="14" Width="200"
                                 Foreground="OrangeRed" Background="#33FFFFFF"
                                 BorderBrush="#555"/>
                    <TextBlock x:Name="EnemyHpTxt" Foreground="White" FontSize="11"
                               HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Row 2: Stats bar -->
            <Border Grid.Row="2" Background="#AA000000" CornerRadius="6"
                    Padding="12,6" Margin="0,0,0,6">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ’œ " Foreground="MediumPurple" FontSize="14"/>
                    <TextBlock x:Name="PlayerManaTxt" Foreground="MediumPurple"
                               FontSize="14" FontWeight="Bold" Margin="0,0,30,0"/>
                    <TextBlock Text="ðŸ›¡ï¸ " Foreground="CornflowerBlue" FontSize="14"/>
                    <TextBlock x:Name="PlayerArmorTxt" Foreground="CornflowerBlue"
                               FontSize="14" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Row 3: Combat log -->
            <Border Grid.Row="3" Background="#AA000000" CornerRadius="6"
                    Padding="6" Margin="0,0,0,8">
                <ListBox x:Name="CombatLog"
                         Background="Transparent" Foreground="LightGray"
                         FontSize="12" BorderThickness="0"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </Border>

            <!-- Row 4: Hand cards -->
            <StackPanel Grid.Row="4">
                <TextBlock Text="âœ‹ Your Hand" Foreground="Gold"
                           FontSize="13" FontWeight="SemiBold" Margin="0,0,0,6"/>
                <WrapPanel x:Name="HandPanel"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
