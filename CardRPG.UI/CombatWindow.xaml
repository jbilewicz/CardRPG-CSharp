<Window x:Class="CardRPG.UI.CombatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Battle!" Height="620" Width="920"
        Background="#1E1E2E"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Enemy Section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="EnemyNameTxt" Text="Enemy" FontSize="22"
                       Foreground="OrangeRed" FontWeight="Bold"/>
            <TextBlock x:Name="EnemyIntentTxt" Text="Intent: ?"
                       Foreground="Gray" FontSize="12" Margin="0,2,0,5"/>
            <ProgressBar x:Name="EnemyHpBar" Height="18"
                         Foreground="OrangeRed" Background="#333"/>
            <TextBlock x:Name="EnemyHpTxt" Text="HP"
                       Foreground="White" FontSize="12" HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- Player Section -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <ProgressBar x:Name="PlayerHpBar" Height="18"
                         Foreground="LimeGreen" Background="#333"/>
            <DockPanel Margin="0,3,0,0">
                <TextBlock x:Name="PlayerHpTxt" Text="HP"
                           Foreground="White" FontSize="12"/>
                <TextBlock x:Name="PlayerArmorTxt" Text="Armor: 0"
                           Foreground="CornflowerBlue" FontSize="12"
                           HorizontalAlignment="Center" DockPanel.Dock="Right"/>
                <TextBlock x:Name="PlayerManaTxt" Text="Mana"
                           Foreground="MediumPurple" FontSize="12"
                           HorizontalAlignment="Right"/>
            </DockPanel>
        </StackPanel>

        <!-- Combat Log -->
        <ListBox x:Name="CombatLog" Grid.Row="2"
                 Background="#12121C" Foreground="LightGray"
                 FontSize="13" Margin="0,0,0,15" BorderBrush="#444"/>

        <!-- Hand -->
        <StackPanel Grid.Row="3">
            <TextBlock Text="Your Hand" Foreground="Gold"
                       FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6"/>
            <WrapPanel x:Name="HandPanel"/>
        </StackPanel>
    </Grid>
</Window>
