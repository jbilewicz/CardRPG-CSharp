<Window x:Class="CardRPG.UI.CombatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="âš”ï¸ Battle!" Height="720" Width="1020"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Black">

    <Grid>
        <!-- Background image -->
        <Image Source="Assets/bg_combat.png" Stretch="Fill"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <!-- Dark overlay -->
        <Rectangle Fill="#BB0A0A15"/>
        <!-- RED HIT FLASH (initially hidden) -->
        <Rectangle x:Name="HitFlash" Fill="#FFFF0000" Opacity="0" IsHitTestVisible="False"
                   Panel.ZIndex="50"/>

        <Grid Margin="18,12,18,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="140"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- â•â•â• Row 0: Top bar â•â•â• -->
            <Border Grid.Row="0" Style="{StaticResource RpgPanel}" Padding="12,8"
                    Margin="0,0,0,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock x:Name="StageTxt" Text="Stage 1 / 3"
                                   FontSize="16" FontWeight="Bold">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FFD700" Offset="0"/>
                                    <GradientStop Color="#FFA500" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock x:Name="EnemyNameTxt" Text="Enemy"
                                   Foreground="OrangeRed" FontSize="20" FontWeight="Bold"
                                   HorizontalAlignment="Right">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="OrangeRed" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock x:Name="EnemyIntentTxt" Text="Intent: ?"
                                   Foreground="#FFCCCC" FontSize="12" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- â•â•â• Row 1: Battle arena â•â•â• -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Player side -->
                <StackPanel Grid.Column="0" VerticalAlignment="Bottom"
                            HorizontalAlignment="Center" Margin="0,0,0,8">
                    <Grid>
                        <Image x:Name="PlayerSprite" Source="Assets/Player.png"
                               Height="190" HorizontalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <!-- Player damage popup -->
                        <TextBlock x:Name="PlayerDmgPopup" Text="" FontSize="30"
                                   FontWeight="Bold" Foreground="#FF4444" Opacity="0"
                                   IsHitTestVisible="False"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Panel.ZIndex="10">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="6"
                                                  ShadowDepth="2" Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>
                    <TextBlock Text="YOU" Foreground="LimeGreen" FontSize="14"
                               FontWeight="Bold" HorizontalAlignment="Center"
                               Margin="0,4,0,3">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="LimeGreen" BlurRadius="6" ShadowDepth="0" Opacity="0.3"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <ProgressBar x:Name="PlayerHpBar" Width="210"
                                 Style="{StaticResource HpBarStyle}"/>
                    <TextBlock x:Name="PlayerHpTxt" Foreground="White" FontSize="12"
                               FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,3,0,0"/>
                </StackPanel>

                <!-- VS label -->
                <TextBlock Grid.Column="1" Text="âš”ï¸"
                           FontSize="28" FontWeight="Bold"
                           VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Gold" BlurRadius="12" ShadowDepth="0" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Enemy side -->
                <StackPanel Grid.Column="2" VerticalAlignment="Bottom"
                            HorizontalAlignment="Center" Margin="0,0,0,8">
                    <Grid>
                        <Image x:Name="EnemySprite" Height="190"
                               HorizontalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <!-- Enemy damage popup -->
                        <TextBlock x:Name="EnemyDmgPopup" Text="" FontSize="30"
                                   FontWeight="Bold" Foreground="OrangeRed" Opacity="0"
                                   IsHitTestVisible="False"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Panel.ZIndex="10">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="6"
                                                  ShadowDepth="2" Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>
                    <TextBlock x:Name="EnemyNameSmallTxt" Foreground="OrangeRed"
                               FontSize="14" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,4,0,3"/>
                    <ProgressBar x:Name="EnemyHpBar" Width="210"
                                 Style="{StaticResource EnemyHpBarStyle}"/>
                    <TextBlock x:Name="EnemyHpTxt" Foreground="White" FontSize="12"
                               FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,3,0,0"/>
                </StackPanel>
            </Grid>

            <!-- â•â•â• Row 2: Stats bar â•â•â• -->
            <Border Grid.Row="2" Style="{StaticResource RpgPanel}"
                    Padding="14,6" Margin="0,0,0,6">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ’œ " FontSize="15"/>
                    <TextBlock x:Name="PlayerManaTxt" Foreground="MediumPurple"
                               FontSize="15" FontWeight="Bold" Margin="0,0,30,0">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="MediumPurple" BlurRadius="6" ShadowDepth="0" Opacity="0.3"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="ðŸ›¡ï¸ " FontSize="15"/>
                    <TextBlock x:Name="PlayerArmorTxt" Foreground="CornflowerBlue"
                               FontSize="15" FontWeight="Bold">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="CornflowerBlue" BlurRadius="6" ShadowDepth="0" Opacity="0.3"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- â•â•â• Row 3: Combat log â•â•â• -->
            <Border Grid.Row="3" Style="{StaticResource RpgPanel}"
                    Padding="6" Margin="0,0,0,8">
                <ListBox x:Name="CombatLog"
                         Background="Transparent" Foreground="LightGray"
                         FontSize="12" BorderThickness="0"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </Border>

            <!-- â•â•â• Row 4: Hand cards â•â•â• -->
            <StackPanel Grid.Row="4">
                <TextBlock Text="âœ‹ Your Hand" FontSize="14" FontWeight="Bold"
                           Margin="0,0,0,6">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FFD700" Offset="0"/>
                            <GradientStop Color="#FFA500" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
                <WrapPanel x:Name="HandPanel" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
