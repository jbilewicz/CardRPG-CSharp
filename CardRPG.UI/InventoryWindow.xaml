<Window x:Class="CardRPG.UI.InventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="đźŽ’ Inventory" Height="540" Width="700"
        Background="#0D0D14"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="26" FontWeight="Bold" Margin="0,0,0,12">
            <TextBlock.Foreground>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#44AACC" Offset="0"/>
                    <GradientStop Color="#2288AA" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
            <TextBlock.Effect>
                <DropShadowEffect Color="#44CCFF" BlurRadius="12" ShadowDepth="0" Opacity="0.3"/>
            </TextBlock.Effect>
            đźŽ’ INVENTORY
        </TextBlock>

        <Border Grid.Row="1" Style="{StaticResource RpgPanel}" Padding="12,8" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="âš”ď¸Ź Equipped Weapon: " Foreground="#8B8B7A" FontSize="14"/>
                <TextBlock x:Name="WeaponTxt" Text="None" Foreground="LightBlue"
                           FontSize="14" FontWeight="Bold">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="LightBlue" BlurRadius="6" ShadowDepth="0" Opacity="0.3"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="        âť¤ď¸Ź HP: " Foreground="#8B8B7A" FontSize="14"/>
                <TextBlock x:Name="HpTxt" Text="" Foreground="LightGreen"
                           FontSize="14" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Style="{StaticResource RpgPanel}" Padding="4">
            <ListView x:Name="InvList"
                      Background="Transparent" Foreground="White"
                      FontSize="14" BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" Width="170"
                                        DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Description" Width="270"
                                        DisplayMemberBinding="{Binding Description}"/>
                        <GridViewColumn Header="Type" Width="110"
                                        DisplayMemberBinding="{Binding Type}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <Border Grid.Row="3" Style="{StaticResource RpgPanel}"
                Padding="10,6" Margin="0,10,0,0">
            <DockPanel>
                <TextBlock x:Name="StatusTxt" Foreground="LimeGreen" FontSize="13"
                           VerticalAlignment="Center"/>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button Content="Use / Equip" Width="130" Height="38"
                            Style="{StaticResource RpgTealButton}"
                            Click="UseButton_Click" Margin="0,0,10,0"/>
                    <Button Content="Close" Width="90" Height="38"
                            Style="{StaticResource RpgSubtleButton}"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>
