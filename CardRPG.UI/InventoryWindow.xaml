<Window x:Class="CardRPG.UI.InventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inventory" Height="650" Width="900"
        Background="Black"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid>
        <Image Source="Assets/bg_city.avif" Stretch="Fill"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Rectangle Fill="#DD0A0A15"/>

        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="INVENTORY" FontSize="28" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,8">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#44AACC" Offset="0"/>
                        <GradientStop Color="#2288AA" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
                <TextBlock.Effect>
                    <DropShadowEffect Color="#44CCFF" BlurRadius="12" ShadowDepth="0" Opacity="0.3"/>
                </TextBlock.Effect>
            </TextBlock>

            <Border Grid.Row="1" Style="{StaticResource RpgPanel}" Padding="14,10" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="EQUIPPED" Foreground="#888" FontSize="11" FontWeight="Bold" Margin="0,0,0,4"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Weapon: " Foreground="#8B8B7A" FontSize="14"/>
                            <TextBlock x:Name="WeaponTxt" Text="None" Foreground="LightBlue"
                                       FontSize="14" FontWeight="Bold">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="LightBlue" BlurRadius="6" ShadowDepth="0" Opacity="0.3"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <Rectangle Grid.Column="1" Width="1" Fill="#333" Margin="12,0"/>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="STATUS" Foreground="#888" FontSize="11" FontWeight="Bold" Margin="0,0,0,4"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="HP: " Foreground="#8B8B7A" FontSize="14"/>
                            <TextBlock x:Name="HpTxt" Text="" Foreground="LightGreen"
                                       FontSize="14" FontWeight="Bold"/>
                            <TextBlock Text="    Deck: " Foreground="#8B8B7A" FontSize="14" Margin="10,0,0,0"/>
                            <TextBlock x:Name="DeckCountTxt" Text="0 cards" Foreground="#FFCC44"
                                       FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource RpgPanel}" Padding="10">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="ITEMS" Foreground="Gold"
                                   FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
                        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"
                                    HorizontalAlignment="Center" Margin="0,8,0,0">
                            <Button Content="Use / Equip" Width="120" Height="36"
                                    Style="{StaticResource RpgTealButton}"
                                    Click="UseButton_Click" Margin="0,0,8,0"/>
                            <Button Content="Drop" Width="80" Height="36"
                                    Style="{StaticResource RpgRedButton}"
                                    Click="DropButton_Click"/>
                        </StackPanel>
                        <ListBox x:Name="ItemList" Background="Transparent"
                                 Foreground="White" FontSize="13" BorderThickness="0"
                                 SelectionChanged="ItemList_SelectionChanged"/>
                    </DockPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource RpgPanel}" Padding="10">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="CARD COLLECTION" Foreground="#FFCC44"
                                   FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
                        <WrapPanel x:Name="CardPanel" Orientation="Horizontal"/>
                    </DockPanel>
                </Border>
            </Grid>

            <Border Grid.Row="3" Style="{StaticResource RpgPanel}"
                    Padding="10,6" Margin="0,10,0,0">
                <DockPanel>
                    <TextBlock x:Name="StatusTxt" Foreground="LimeGreen" FontSize="13"
                               VerticalAlignment="Center"/>
                    <Button DockPanel.Dock="Right" Content="Close" Width="90" Height="38"
                            Style="{StaticResource RpgSubtleButton}"
                            Click="CloseButton_Click"/>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
