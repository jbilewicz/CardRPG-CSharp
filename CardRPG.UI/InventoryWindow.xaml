<Window x:Class="CardRPG.UI.InventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸŽ’ Inventory" Height="500" Width="660"
        Background="#1E1E2E"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="ðŸŽ’ INVENTORY" FontSize="24" FontWeight="Bold"
                   Foreground="Teal" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Equipped weapon: " Foreground="Gray" FontSize="13"/>
            <TextBlock x:Name="WeaponTxt" Text="None" Foreground="LightBlue" FontSize="13"/>
            <TextBlock Text="    HP: " Foreground="Gray" FontSize="13"/>
            <TextBlock x:Name="HpTxt" Text="" Foreground="LightGreen" FontSize="13"/>
        </StackPanel>

        <ListView x:Name="InvList" Grid.Row="2"
                  Background="#12121C" Foreground="White"
                  FontSize="14" BorderBrush="#444">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="160" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Description" Width="260" DisplayMemberBinding="{Binding Description}"/>
                    <GridViewColumn Header="Type" Width="110" DisplayMemberBinding="{Binding Type}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <TextBlock x:Name="StatusTxt" Foreground="LightGreen" FontSize="13"
                       VerticalAlignment="Center" Margin="0,0,20,0"/>
            <Button Content="Use / Equip" Width="120" Height="38"
                    Background="Teal" Foreground="White" FontWeight="Bold"
                    Click="UseButton_Click" Margin="0,0,10,0"/>
            <Button Content="Close" Width="80" Height="38"
                    Background="#555" Foreground="White"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
