<Window x:Class="CardRPG.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CardRPG - Login" Height="450" Width="800"
        Background="#2D2D30">
    
    <Grid>
        <TextBlock Text="⚔️ CardRPG ⚔️" 
                   FontSize="40" 
                   Foreground="Gold" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="0,50,0,0" 
                   FontWeight="Bold"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            
            <TextBlock Text="Username:" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameBox" Height="30" FontSize="16"/>

            <TextBlock Text="Password:" Foreground="White" Margin="0,10,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="30" FontSize="16"/>

            <Button x:Name="LoginButton" Content="LOGIN" 
                    Height="40" Margin="0,20,0,0" 
                    Background="Green" Foreground="White" FontWeight="Bold"
                    Click="LoginButton_Click"/>
            
            <Button x:Name="RegisterButton" Content="REGISTER" 
                    Height="40" Margin="0,10,0,0" 
                    Background="#444" Foreground="White"
                    Click="RegisterButton_Click"/>

            <TextBlock x:Name="StatusText" Text="" Foreground="Red" 
                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>