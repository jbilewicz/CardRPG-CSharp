<Window x:Class="CardRPG.UI.ShopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ›’ Shop" Height="640" Width="880"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Black">

    <Grid>
        <Image Source="Assets/bg_shop.png" Stretch="Fill"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Rectangle Fill="#CC08100A"/>

        <Grid Margin="20,16,20,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- â•â•â• HEADER â•â•â• -->
            <Border Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource RpgPanel}"
                    Padding="16,10" Margin="0,0,0,12">
                <DockPanel>
                    <TextBlock FontSize="26" FontWeight="Bold" VerticalAlignment="Center">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FFD700" Offset="0"/>
                                <GradientStop Color="#FFA500" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                        ðŸ›’ GENERAL STORE
                    </TextBlock>
                    <StackPanel DockPanel.Dock="Right" HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’° " FontSize="18"/>
                            <TextBlock x:Name="GoldTxt" Text="0" FontSize="20" FontWeight="Bold">
                                <TextBlock.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#FFD700" Offset="0"/>
                                        <GradientStop Color="#FFA500" Offset="1"/>
                                    </LinearGradientBrush>
                                </TextBlock.Foreground>
                            </TextBlock>
                            <TextBlock Text=" Gold" Foreground="#B8860B" FontSize="13"
                                       VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                        </StackPanel>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- â•â•â• LEFT: Stat Upgrades with visible values â•â•â• -->
            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource RpgPanel}">
                <StackPanel>
                    <TextBlock Text="âš¡ STAT UPGRADES" FontSize="16" FontWeight="Bold"
                               Foreground="Gold" Margin="0,0,0,14">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#FFD700" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- Stats Grid -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="58"/>
                            <ColumnDefinition Width="42"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <!-- â”€â”€ STRENGTH â”€â”€ -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ðŸ’ª STR"
                                   Foreground="#E8C080" FontSize="15" FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                        <Border Grid.Row="0" Grid.Column="1" Background="#33FFD700"
                                CornerRadius="4" Margin="4,6" Padding="4,2"
                                BorderBrush="#55FFD700" BorderThickness="1">
                            <TextBlock x:Name="StrValueTxt" Text="10" FontSize="17"
                                       FontWeight="Bold" Foreground="White"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Grid.Row="0" Grid.Column="2" x:Name="StrBonusTxt"
                                   Text="+1" FontSize="15" FontWeight="Bold"
                                   Foreground="LimeGreen" Opacity="0"
                                   VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="LimeGreen" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <Button Grid.Row="0" Grid.Column="3" Content="50 ðŸ’°"
                                Style="{StaticResource RpgButton}" Height="34"
                                Margin="6,4" Padding="8,4" FontSize="12"
                                Click="BuyStrength_Click"/>

                        <!-- â”€â”€ AGILITY â”€â”€ -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="ðŸ¦µ AGI"
                                   Foreground="#80E880" FontSize="15" FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                        <Border Grid.Row="1" Grid.Column="1" Background="#3344FF44"
                                CornerRadius="4" Margin="4,6" Padding="4,2"
                                BorderBrush="#5544FF44" BorderThickness="1">
                            <TextBlock x:Name="AgiValueTxt" Text="10" FontSize="17"
                                       FontWeight="Bold" Foreground="White"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Grid.Row="1" Grid.Column="2" x:Name="AgiBonusTxt"
                                   Text="+1" FontSize="15" FontWeight="Bold"
                                   Foreground="LimeGreen" Opacity="0"
                                   VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="LimeGreen" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <Button Grid.Row="1" Grid.Column="3" Content="50 ðŸ’°"
                                Style="{StaticResource RpgButton}" Height="34"
                                Margin="6,4" Padding="8,4" FontSize="12"
                                Click="BuyAgility_Click"/>

                        <!-- â”€â”€ INTELLIGENCE â”€â”€ -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="ðŸ§  INT"
                                   Foreground="#8080E8" FontSize="15" FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                        <Border Grid.Row="2" Grid.Column="1" Background="#334444FF"
                                CornerRadius="4" Margin="4,6" Padding="4,2"
                                BorderBrush="#554444FF" BorderThickness="1">
                            <TextBlock x:Name="IntValueTxt" Text="10" FontSize="17"
                                       FontWeight="Bold" Foreground="White"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Grid.Row="2" Grid.Column="2" x:Name="IntBonusTxt"
                                   Text="+1" FontSize="15" FontWeight="Bold"
                                   Foreground="LimeGreen" Opacity="0"
                                   VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="LimeGreen" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <Button Grid.Row="2" Grid.Column="3" Content="50 ðŸ’°"
                                Style="{StaticResource RpgButton}" Height="34"
                                Margin="6,4" Padding="8,4" FontSize="12"
                                Click="BuyIntelligence_Click"/>

                        <!-- â”€â”€ MAX HP â”€â”€ -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="â¤ï¸ Max HP"
                                   Foreground="#E86060" FontSize="15" FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                        <Border Grid.Row="3" Grid.Column="1" Background="#33FF4444"
                                CornerRadius="4" Margin="4,6" Padding="4,2"
                                BorderBrush="#55FF4444" BorderThickness="1">
                            <TextBlock x:Name="HpValueTxt" Text="100" FontSize="17"
                                       FontWeight="Bold" Foreground="White"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Grid.Row="3" Grid.Column="2" x:Name="HpBonusTxt"
                                   Text="+10" FontSize="14" FontWeight="Bold"
                                   Foreground="LimeGreen" Opacity="0"
                                   VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="LimeGreen" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <Button Grid.Row="3" Grid.Column="3" Content="75 ðŸ’°"
                                Style="{StaticResource RpgButton}" Height="34"
                                Margin="6,4" Padding="8,4" FontSize="12"
                                Click="BuyMaxHp_Click"/>

                        <!-- â”€â”€ ARMOR â”€â”€ -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="ðŸ›¡ï¸ Armor"
                                   Foreground="#80C0C0" FontSize="15" FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                        <Border Grid.Row="4" Grid.Column="1" Background="#3344AACC"
                                CornerRadius="4" Margin="4,6" Padding="4,2"
                                BorderBrush="#5544AACC" BorderThickness="1">
                            <TextBlock x:Name="ArmorValueTxt" Text="0" FontSize="17"
                                       FontWeight="Bold" Foreground="White"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Grid.Row="4" Grid.Column="2" x:Name="ArmorBonusTxt"
                                   Text="+5" FontSize="14" FontWeight="Bold"
                                   Foreground="LimeGreen" Opacity="0"
                                   VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="LimeGreen" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <Button Grid.Row="4" Grid.Column="3" Content="30 ðŸ’°"
                                Style="{StaticResource RpgButton}" Height="34"
                                Margin="6,4" Padding="8,4" FontSize="12"
                                Click="BuyArmor_Click"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Spacer -->
            <Rectangle Grid.Row="1" Grid.Column="1"/>

            <!-- â•â•â• RIGHT: Items â•â•â• -->
            <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource RpgPanel}">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="ðŸŽ’ ITEMS" FontSize="16"
                               FontWeight="Bold" Foreground="Gold" Margin="0,0,0,12">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#FFD700" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <Button DockPanel.Dock="Bottom" Content="ðŸ›’  Buy Selected"
                            Height="40" Margin="0,10,0,0"
                            Style="{StaticResource RpgButton}"
                            FontSize="14"
                            Click="BuyItem_Click"/>
                    <ListView x:Name="ShopList"
                              Background="Transparent" Foreground="White"
                              FontSize="13" BorderBrush="#444" BorderThickness="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" Width="130"
                                                DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Info" Width="150"
                                                DisplayMemberBinding="{Binding Description}"/>
                                <GridViewColumn Header="Price" Width="50"
                                                DisplayMemberBinding="{Binding Price}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </DockPanel>
            </Border>

            <!-- â•â•â• STATUS BAR â•â•â• -->
            <Border Grid.Row="2" Grid.ColumnSpan="3" Style="{StaticResource RpgPanel}"
                    Padding="12,8" Margin="0,10,0,0">
                <DockPanel>
                    <TextBlock x:Name="StatusTxt" Foreground="LimeGreen" FontSize="14"
                               VerticalAlignment="Center"/>
                    <Button DockPanel.Dock="Right" Content="Close"
                            Width="90" Height="34"
                            Style="{StaticResource RpgSubtleButton}"
                            Click="CloseButton_Click"/>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
