<Window x:Class="CardRPG.UI.ShopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ›’ Shop" Height="600" Width="820"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Black">

    <Grid>
        <Image Source="Assets/bg_shop.png" Stretch="Fill"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Rectangle Fill="#CC08100A"/>

        <Grid Margin="20,16,20,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,0,14">
                <TextBlock Text="ðŸ›’ GENERAL STORE" FontSize="24" FontWeight="Bold"
                           Foreground="Gold" VerticalAlignment="Center"/>
                <StackPanel DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <TextBlock x:Name="GoldTxt" Text="Gold: 0"
                               Foreground="Gold" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="StatsTxt" Text="" Foreground="#AAD0AA" FontSize="11"/>
                </StackPanel>
            </DockPanel>

            <!-- LEFT: Stat upgrades -->
            <Border Grid.Row="1" Grid.Column="0"
                    Background="#AA000000" CornerRadius="6" Padding="12">
                <StackPanel>
                    <TextBlock Text="âš¡ Stat Upgrades" Foreground="Gold"
                               FontSize="15" FontWeight="Bold" Margin="0,0,0,10"/>

                    <Button Content="ðŸ’ª Strength +1  (50g)"  Height="38" Margin="0,0,0,6"
                            Background="#4A1010" Foreground="White" FontSize="13"
                            Click="BuyStrength_Click"/>
                    <Button Content="ðŸ¦µ Agility +1   (50g)"  Height="38" Margin="0,0,0,6"
                            Background="#103A10" Foreground="White" FontSize="13"
                            Click="BuyAgility_Click"/>
                    <Button Content="ðŸ§  Intelligence +1 (50g)" Height="38" Margin="0,0,0,6"
                            Background="#10204A" Foreground="White" FontSize="13"
                            Click="BuyIntelligence_Click"/>
                    <Button Content="â¤ï¸ Max HP +10  (75g)"  Height="38" Margin="0,0,0,6"
                            Background="#4A1030" Foreground="White" FontSize="13"
                            Click="BuyMaxHp_Click"/>
                    <Button Content="ðŸ›¡ï¸ Armor +5    (30g)"   Height="38" Margin="0,0,0,6"
                            Background="#204040" Foreground="White" FontSize="13"
                            Click="BuyArmor_Click"/>
                </StackPanel>
            </Border>

            <!-- Spacer column -->
            <Rectangle Grid.Row="1" Grid.Column="1"/>

            <!-- RIGHT: Items -->
            <Border Grid.Row="1" Grid.Column="2"
                    Background="#AA000000" CornerRadius="6" Padding="12">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="ðŸŽ’ Items"
                               Foreground="Gold" FontSize="15" FontWeight="Bold"
                               Margin="0,0,0,10"/>
                    <Button DockPanel.Dock="Bottom" Content="ðŸ›’ Buy Selected"
                            Height="38" Margin="0,10,0,0"
                            Background="DarkGoldenrod" Foreground="White" FontWeight="Bold"
                            Click="BuyItem_Click"/>
                    <ListView x:Name="ShopList"
                              Background="Transparent" Foreground="White"
                              FontSize="13" BorderBrush="#555">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name"  Width="130"
                                               DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Info"  Width="150"
                                               DisplayMemberBinding="{Binding Description}"/>
                                <GridViewColumn Header="Price" Width="50"
                                               DisplayMemberBinding="{Binding Price}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </DockPanel>
            </Border>

            <!-- Status bar -->
            <Border Grid.Row="2" Grid.ColumnSpan="3"
                    Background="#AA000000" CornerRadius="4"
                    Padding="10,6" Margin="0,10,0,0">
                <DockPanel>
                    <TextBlock x:Name="StatusTxt" Foreground="LightGreen" FontSize="13"/>
                    <Button DockPanel.Dock="Right" Content="Close"
                            Width="80" Height="32"
                            Background="#555" Foreground="White"
                            Click="CloseButton_Click"/>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
