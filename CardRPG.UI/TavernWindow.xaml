<Window x:Class="CardRPG.UI.TavernWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸº Tavern" Height="440" Width="680"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Black">

    <Grid>
        <Image Source="Assets/bg_tavern.png" Stretch="Fill"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Rectangle Fill="#CC0A0808"/>

        <Grid Margin="30,25,30,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="ðŸº THE RUSTY FLAGON"
                       FontSize="28" FontWeight="Bold" Foreground="Gold"
                       HorizontalAlignment="Center" Margin="0,0,0,6"/>
            <TextBlock Grid.Row="1" Text="Rest your weary bones, adventurer."
                       FontSize="13" Foreground="#BBAA88"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="HpTxt" Text="HP: 100/100"
                           Foreground="LightGreen" FontSize="16"
                           HorizontalAlignment="Center" Margin="0,0,0,6"/>
                <TextBlock x:Name="GoldTxt" Text="Gold: 0"
                           Foreground="Gold" FontSize="16"
                           HorizontalAlignment="Center" Margin="0,0,0,25"/>

                <Button Content="ðŸ– Meal â€” Heal 30 HP  (10g)"
                        Width="260" Height="46" Margin="0,0,0,12"
                        Background="#5C3013" Foreground="White"
                        FontSize="14" FontWeight="Bold"
                        Click="MealButton_Click"/>

                <Button Content="ðŸ›ï¸ Full Rest â€” Heal fully  (30g)"
                        Width="260" Height="46" Margin="0,0,0,12"
                        Background="#3A2060" Foreground="White"
                        FontSize="14" FontWeight="Bold"
                        Click="RestButton_Click"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="StatusTxt" Foreground="LightGreen" FontSize="13"
                           VerticalAlignment="Center" Margin="0,0,16,0"/>
                <Button Content="Leave" Width="90" Height="36"
                        Background="#444" Foreground="White"
                        Click="LeaveButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
